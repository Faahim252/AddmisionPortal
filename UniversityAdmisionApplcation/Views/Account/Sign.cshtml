@{
      Layout = "_Layout";
}

<h1 class="text-center mt-5">Login</h1>

<div class="container text-white ">
    @if (TempData["Masegge"] == "Error")
    {
        <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">InCorrect userName Or Password.</p>
        </div>
    }
    <div class="row">
        <div class="col-lg-4 col-md-8 col-sm-12">
        </div>
        <div class="col-lg-4 col-md-8 col-sm-12">
            <form method="post">
                <div class="mb-3">
                    <label for="UserName" class="form-label">UserName</label>
                    <input type="text" name="UserName" class="form-control" id="UserName" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" id="Password">
                </div>
                <div class="mb-3">
                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Forget">Forget password ?
                    </a>
                 </div>
                 <button type="submit" class="btn btn-primary">Success</button>
             </form>
        </div>
         <div class="col-lg-4 col-md-8 col-sm-12">
        </div>
    </div>
</div>